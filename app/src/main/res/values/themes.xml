<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>


        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_grey</item>
        <item name="colorDivider">@color/color_divider_dark</item>
    </style>


    <!-- Ваша AppTheme или другие темы и стили здесь -->

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона вашу drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>